.footer-container
	display flex
	flex-wrap wrap
	padding 102px 0px 50px 85px
	border-bottom 1px solid #e5e5e5
	margin-bottom 34px
	
.massage-box
	margin-right 132px
	margin-bottom 30px

.massage-box-title
	margin-bottom 27px
	font-size rem(22)
	
.massage-form
	display flex
	justify-content space-between
	flex-wrap wrap
	
.inputs
	width 264px
	margin-right 20px

.textarea
	text-align right

.massage-form input:not([type="submit"])
	display block
	width 265px
	padding 12px 0px 12px 12px
	margin-bottom 20px
	font-family italicFont
	font-size 18px
	
.massage-form textarea
	display block
	margin-bottom 15px
	padding 12px 50px 128px 12px
	font-family italicFont
	font-size 18px
	
.massage-form input[type="submit"]
	padding 12px 18px
	background-color battonHederColor
	color #fff
	border none
	font-family mainFont
	font-size rem(16)
	cursor pointer
	
/*contacts-box*/

.location,
.mail,
.call
	position relative
	padding-left 78px
	
.location:before
	position absolute
	top 15px
	left 0px
	content ''
	display block
	background url('../img/content/home.png') 0 0 no-repeat
	size(32px)

.mail:before
	position absolute
	top 15px
	left 0px
	content ''
	display block
	background url('../img/content/mail.png') 0 0 no-repeat
	size(32px)

.call:before
	position absolute
	top 15px
	left 0px
	content ''
	display block
	background url('../img/content/phone.png') 0 0 no-repeat
	size(32px)

.location-title,
.mail-title,
.call-title
	margin-bottom 25px
	font-size rem(22)
	
.location-desc,
.mail-desc,
.call-desc
	margin-bottom 35px
	color locationDescColor
	font-size rem(16)
	line-height 1.3
	
/*Footer bottom*/
	
.footer-container-bottom
	width 100%
	max-width 254px
	margin 0 auto
	text-align center
	
ul.social-icon
	margin-bottom 16px
	li
		display inline-block
		border-right 1px solid vertLineFooter
		
		a
			display block
			padding 0 13px 0 13px

.icon-twitter
	size(20px,16px)
	fill #69d4d8

.icon-skype
	size(20px,16px)
	fill #9b9b9b

.icon-dribbble
	size(20px,16px)
	fill #9b9b9b
	
.copyright
	margin-bottom 33px
	font-size rem(12)
	color copirightColor
	