.content-container-top
	margin-bottom 80px
	background-color aboutMeColor
	
.about-me-container
	width 100%
	max-width 1119px
	margin 0 auto
	display flex
	justify-content space-between
	flex-wrap wrap
	align-items flex-end
	background-color aboutMeColor
	font-family mainFont

.about-me-title
	h1
		position relative
		margin-top 180px
		margin-bottom 54px
		color contentTitleColor
		font-size rem(32)
		font-family boldFont
		
		&:after
			position absolute
			top 48px
			content ''
			display block
			width 76px
			border 2px solid battonHederColor
	p
		width 100%
		max-width 400px
		color contentDescColor
		font-size rem(16)
		margin-bottom 23px
		
.about-me-description
	width 338px
	background-color #fff
	
	li
		padding 21px 0px 17px 0px
		border-bottom 1px solid descBorderColor
		
		span:first-child
			font-family boldFont
			
		span:last-child
			color contentTitleColor

	li:last-child
		border-bottom none
		
.photo
	size(377px,525px)
	background-color hederColor
	
.work-exp-container,
.education-container
	width 100%
	max-width 1120px
	margin 0 auto
	

.work-exp-block,
.education-block,
.skills-block
	display flex
	justify-content space-between
	flex-wrap wrap
	border-top 1px solid transparent

.work-exp-block
	border-bottom 1px solid descBorderColor
	margin-bottom 80px
	
.education-block
	margin-bottom 80px

.managing-director
	margin-bottom 80px
	
.caption
	h1
		position relative
		margin-bottom 77px
		color contentTitleColor
		font-size rem(32)
		font-family boldFont
		
		&:after
			position absolute
			top 48px
			content ''
			display block
			width 76px
			border 2px solid battonHederColor
			
.work-exp-left,
.education-left
	margin-top 93px
	
.creative-director,
.art-director
	margin-bottom 190px
	
.designer,
.graduation
	margin-bottom 190px

.box
	position relative
	width 475px
	padding 21px 5px 25px 22px
	background-color hederColor
	border-radius 7px
	
.position
	display inline-block
	margin-right 27px
	margin-bottom 15px
	color #fff
	font-size rem(22)
	
.email
	display inline-block
	margin-bottom 15px
	color emailColor
	font-size rem(20.09)
	
.date
	display block
	margin-bottom 17px
	color battonHederColor
	text-transform uppercase
	font-size rem(18)
	font-family regularFont
	
.description
	display block
	width 100%
	max-width 317px
	color emailColor
	font-size rem(16)
	line-height 1.4

.angle-left
	position absolute
	top 100px
	left 474px
	background url('../img/content/angle-left.png') 0 0 no-repeat
	size(37px,31px)
	
.angle-right
	position absolute
	top 23px
	left -37px
	background url('../img/content/angle-right.png') 0 0 no-repeat
	size(37px,31px)
	
/*Education Middle*/

.middle-line
	position relative
	size(42px,580px)

.line
	position absolute
	left 49%
	size(1px,580px)
	border-left 1px solid hederColor

.point
	position absolute
	size(42px,42px)
	background url('../img/content/point.png') 0 0 no-repeat
	z-index 2

.point-1
	position absolute
	top -1px
	left -22px

.point-2
	position absolute
	top 200px
	left -22px

.point-3
	position absolute
	top 357px
	left -22px

.point-4
	position absolute
	top 543px
	left -22px

/*Skills*/

.skills-container
	padding 64px 141px 62px 85px
	background-color skillsColor
	
.skills-me-title h1
	color #fff
	
.skills-block
	color skillsTitleColor
	font-size rem(18)
	
.skillbar
	width 100%
	max-width 312px
	margin-bottom 34px

.skillbar>li
	display inline-block

.skillbar-title
	margin-bottom 23px
	font-size rem(18)

.skillbar-range
	appearance none
	width 255px
	height 4px
	background-image linear-gradient(to right, #fb6470 90%,#bcbcbe 10%)
	margin-right 20px

.skill-bar-percent
	font-size rem(14)
	
/* Ползунок */

.skillbar-range::-webkit-slider-thumb
	appearance none
	display block
	size(18px)
	border-radius 50%
	background-color battonHederColor
	cursor pointer